#include <iostream>
#include <string>

int main()
{
	std::string str;
	std::cin >> str;

	int wordCount(1);
	for (int i = 0; i < str.length(); ++i)
	{
		if (str[i] >= 65 && str[i] <= 90)
			wordCount++;
	}
	std::cout << wordCount << std::endl;
}
